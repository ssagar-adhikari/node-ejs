<%- include('layout/header') %>
<div class="container">
  <div class="row">
    <div class="col-lg-6 mx-auto mt-4">
      <div class="card shadow">
        <div class="card-header bg-success">
          <h3 class="text-light">Edit User (<%= user.name %> )</h3>
        </div>
        <div class="card-body p-4">
          <form
            action="/update/<%= user._id %> "
            method="post"
            enctype="multipart/form-data"
          >
            <div class="mb-3">
              <label>Name:</label>
              <input
                type="text"
                name="name"
                class="form-control"
                placeholder="Enter Name"
                required
                value="<%= user.name %> "
              />
            </div>
            <div class="mb-3">
              <label>Email Address:</label>
              <input
                type="email"
                name="email"
                class="form-control"
                placeholder="Enter email"
                required
                value="<%= user.email %> "
              />
            </div>
            <div class="mb-3">
              <label>Phone:</label>
              <input
                type="tel"
                name="phone"
                class="form-control"
                placeholder="Enter Phone Number"
                required
                value="<%= user.phone %> "
              />
            </div>
            <div class="mb-3">
              <label class="form-label">Select Image:</label><br />
              <input
                type="file"
                class="form-control form-control-lg"
                name="image"
              />
              <img src="/<%= user.image %> " alt="<%= user.name %>" width="100" class="img-thumbnail mt-1">
              <input type="hidden" name="old_image" value="<%= user.image %> ">
            </div>
            <!-- <br /> -->
            <div class="mb-3 d-grid">
              <button
                type="submit"
                name="submit"
                class="btn btn-success btn-lg"
              >
                Submit
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
<%- include('layout/footer') %>
